<!--index.wxml-->
<view class="container">
  <view class="page-head">
    <view class="page-head-title">Process Image</view>
    <view class="page-head-line"></view>
  </view>

  <view class="page-body">
    <block wx:if="{{imageSrc}}">
      <image src="{{imageSrc}}" class="image" mode="aspectFit"></image>
    </block>
  </view>
  
  <scroll-view class="scroll-view" scroll-x="true" bindscroll="scroll">
    <image style="box-sizing:border-box;border: #257EF1 6rpx;border-style:{{borderStyles[0]}}" class="scroll-image" id="option0" bindtap="optionChosen" src="/images/landscape.png" mode="scaleToFill"></image>
    <image style="box-sizing:border-box;border: #257EF1 6rpx;border-style:{{borderStyles[1]}}" class="scroll-image" id="option1" bindtap="optionChosen" src="/images/landscape.png" mode="scaleToFill"></image>
    <image style="box-sizing:border-box;border: #257EF1 6rpx;border-style:{{borderStyles[2]}}" class="scroll-image" id="option2" bindtap="optionChosen" src="/images/landscape.png" mode="scaleToFill"></image>
    <image style="box-sizing:border-box;border: #257EF1 6rpx;border-style:{{borderStyles[3]}}" class="scroll-image" id="option3" bindtap="optionChosen" src="/images/landscape.png" mode="scaleToFill"></image>
    <image style="box-sizing:border-box;border: #257EF1 6rpx;border-style:{{borderStyles[4]}}" class="scroll-image" id="option4" bindtap="optionChosen" src="/images/landscape.png" mode="scaleToFill"></image>
    <image style="box-sizing:border-box;border: #257EF1 6rpx;border-style:{{borderStyles[5]}}" class="scroll-image" id="option5" bindtap="optionChosen" src="/images/landscape.png" mode="scaleToFill"></image>
  </scroll-view>
</view>
