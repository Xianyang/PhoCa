.page-body{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  /*padding: 30rpx;*/
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  /*background-color: #fff;*/
  background-color: #fff;
  /*padding: 50rpx 0 150rpx 0;*/
}
.image {
  width: 100%;
  height: 360rpx;
}
.image-plus {
  width: 150rpx;
  height: 150rpx;
  position: relative;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

button{
  margin: 20rpx;
